@model IEnumerable<TraveLog.Models.BlogListItem>

@{
    ViewBag.Title = "Index";
}

<h2>My Travels</h2>

<p>
    @Html.ActionLink("Create a New Trip", "Create", "Location")
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BlogId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateVisited)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InitialThoughts)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cities)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Thoughts)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BlogId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateVisited)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InitialThoughts)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cities)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CountryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Thoughts)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.BlogId }) |
            @Html.ActionLink("Details", "Details", new { id = item.BlogId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.BlogId })
        </td>
    </tr>
        }

    </table>

    <div>
        @Html.ActionLink("Back Home", "Index", "Home")
    </div>